@model IEnumerable<PiDevCRM.Domain.Entities.Agent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
<tr>
    <td>
        <div>
            Recherche par Titre: @Html.TextBox("filtre")
        </div>
    </td>
    <td> <input type="submit" value="Search" id="submit" /> </td>
</tr>
    </table>}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prospection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prospection.TypeProspection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdAgent }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdAgent }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdAgent })
            </td>
        </tr>
    }

</table>
