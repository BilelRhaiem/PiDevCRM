@model IEnumerable<PiDevCRM.Domain.Entities.Product>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";

}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Electro - HTML Ecommerce Template</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/ContentFront/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/ContentFront/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/ContentFront/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/ContentFront/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/ContentFront/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/ContentFront/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<nav id="navigation">

    <div class="container">

        <div id="responsive-nav">

            <ul class="main-nav nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "IndexFront", "Product") </li>
                <li>@Html.ActionLink("Hot Deals", "IndexFrontPAck", "Product")</li>
                <li>@Html.ActionLink("Store", "Index", "Store")</li>
            </ul>

        </div>

    </div>

</nav>



<div class="section">

    <div class="container">

        <div class="row">

            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                    <div class="section-nav">

                    </div>
                </div>
            </div>



            @*@RenderBody()*@


            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">

                        <div id="tab1" class="tab-pane active">
                            <div class="products-slick" data-nav="#slick-nav-1">
                                @foreach (var item in Model)
                                {
                                    <div class="product">
                                        <div class="product-img">
                                            @{ string path = "~/Content/uploads/" + @item.ImageProduct;}
                                            <img src="@Url.Content(path)" alt="" height="200" width="60" />
                                            <div class="product-label">
                                                @*<span class="sale"></span>*@
                                                <span class="new">NEW</span>
                                            </div>
                                        </div>
                                        <div class="product-body">
                                            <p class="product-category">@Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                                            <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.NameProduct)</a></h3>
                                            <h4 class="product-price">@Html.DisplayFor(modelItem => item.Price) TND</h4>
                                            @if (item.IdDiscount != null)
                                            {
                                                if (item.Discount.EndDate > DateTime.Now)
                                                {
                                                    if (item.IdStock != null) { 
                                            <h4 class="product-price">
                                                Discount:
                                                <h3 class="product-name"> @Html.DisplayFor(modelItem => item.Discount.Pourcentage)</h3>
                                                <h3 class="product-name"> @Html.DisplayFor(modelItem => item.Discount.StartDate) -@Html.DisplayFor(modelItem => item.Discount.EndDate)</h3>
                                            </h4>
                                                    }
                                                }
                                            }
                                            <h4 class="product-name">
                                                @*@Html.DisplayFor(modelItem => item.Availability)*@
                                                @if (item.IdStock != null)
                                                {
                                                    <p>In_Stock</p>
                                                }
                                                @if (item.IdStock == null)
                                                {
                                                    <p>Out_Of_Stock</p>
                                                }

                                            </h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>

                                        </div>
                                        <div class="add-to-cart">
                                            <button class="add-to-cart-btn">
                                                @if (item.IdStock != null)
                                                {
                                                    <i class="fa fa-shopping-cart"></i>@Html.ActionLink("Add to cart", "EditCart", new { id = item.IdProduct })
                                                }
                                                @if (item.IdStock == null)
                                                {
                                                    <i class="fa fa-shopping-cart"></i><span>Add to cart</span>

                                                }
                                            </button>
                                        </div>
                                    </div>

                                }
                            </div>
                            <div id="slick-nav-1" class="products-slick-nav"></div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<div id="hot-deal" class="section">

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="hot-deal">
                    <ul class="hot-deal-countdown">
                        <li>
                            <div>
                                <h3>20%</h3>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>30%</h3>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>40%</h3>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>50%</h3>
                            </div>
                        </li>
                    </ul>
                    <h2 class="text-uppercase">hot deal this week</h2>
                    <p>New Collection Up to 50% OFF</p>
                    <a>@Html.ActionLink("Shop Now", "IndexFrontPAck", "Product")</a>
                </div>
            </div>
        </div>

    </div>

</div>

