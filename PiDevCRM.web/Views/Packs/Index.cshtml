@model IEnumerable<PiDevCRM.Domain.Entities.Pack>

@{
    ViewBag.Title = "Pack List";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Pack List</h6>
</div>
<div class="card-body">
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("View Packs Details", "Index", "PackProducts")
    <div></div>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PackName)</th>
                    <th>@Html.DisplayNameFor(model => model.PackPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.Availability)</th>
                    <th>Pack Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackPrice) TND
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Availability)
                    </td>
                    @if (item.Availability == true)
                    {
                        <td>
                            <p>Posted</p>
                        </td>
                    }

                    @if (item.Availability == false)
                    {
                        <td>
                            <p>Pack is empty</p>
                        </td>
                    }
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdPack }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.IdPack }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdPack })
                    </td>
                </tr>
                }
        </table>
    </div>
</div>

<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Core plugin JavaScript-->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>
<!-- Custom scripts for all pages-->
<script src="js/sb-admin-2.min.js"></script>
<!-- Page level plugins -->
<script src="vendor/datatables/jquery.dataTables.min.js"></script>
<script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>
<!-- Page level custom scripts -->
<script src="js/demo/datatables-demo.js"></script>





