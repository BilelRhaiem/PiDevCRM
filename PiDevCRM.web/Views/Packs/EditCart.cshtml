@model PiDevCRM.Domain.Entities.Pack

@{
    /**/

    /**/

    ViewBag.Title = "EditCart";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";

}

<h2>AddToCart</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPack)

        <div class="form-group">
            @Html.LabelFor(model => model.PackName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("PackName", Model.PackName, new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.PackName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PackPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("PackPrice", Model.PackPrice.ToString(), new { @readonly = "readonly" }) DT
                @Html.ValidationMessageFor(model => model.PackPrice, "", new { @class = "text-danger" })
            </div>
        </div>

      


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="add-to-cart-btn">
                    <i class="fa fa-shopping-cart"></i>@Html.ActionLink("Add to cart", "EditCart", "Pack")
                </button>
            </div>
        </div>
    </div>


}



